<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tarento.checkin.checkin">

    <!-- Communicate on the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Camera Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <!-- File Read and Write Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="face" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".camera.CameraLoginActivity"
            android:label="@string/capture_photo_label"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".registration.SuccessfulLoginActivity"
            android:label="@string/successful_login_label"
            android:parentActivityName=".camera.CameraLoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".camera.CameraLoginActivity" />
        </activity>
        <activity
            android:name=".registration.UnsuccessfulLoginActivity"
            android:label="@string/unsuccessful_login_label"
            android:parentActivityName=".camera.CameraLoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".camera.CameraLoginActivity" />
        </activity>
        <activity
            android:name=".admin.AdminCheckIn"
            android:label="@string/manual_check_in"
            android:parentActivityName=".registration.UnsuccessfulLoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".registration.UnsuccessfulLoginActivity" />
        </activity>
        <activity
            android:name=".registration.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".registration.SuccessfulRegistrationActivity"
            android:label="@string/registration_successful_label"
            android:parentActivityName=".registration.RegistrationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".registration.RegistrationActivity" />
        </activity>
        <activity
            android:name=".camera.CameraRegistrationActivity"
            android:label="@string/capture_photo_label"
            android:parentActivityName=".registration.RegistrationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".registration.RegistrationActivity" />
        </activity>
        <activity
            android:name=".camera.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".admin.AdminOptions"
            android:label="@string/admin_options_label"
            android:parentActivityName=".camera.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".camera.LoginActivity" />
        </activity>
        <activity
            android:name=".admin.OrganizationActivity"
            android:label="@string/organization_options_label"
            android:parentActivityName=".admin.AdminOptions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.AdminOptions" />
        </activity>
        <activity
            android:name=".admin.ShiftActivity"
            android:label="@string/shift_options_label"
            android:parentActivityName=".admin.AdminOptions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.AdminOptions" />
        </activity>
        <activity
            android:name=".camera.CheckInActivity"
            android:label="@string/check_in_options_label"
            android:parentActivityName=".admin.AdminOptions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.AdminOptions" />
        </activity>
        <activity
            android:name=".admin.CreateOrganizationActivity"
            android:label="@string/create_organization_label"
            android:parentActivityName=".admin.OrganizationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.OrganizationActivity" />
        </activity>
        <activity
            android:name=".admin.EditOrganizationActivity"
            android:label="@string/edit_organization_label"
            android:parentActivityName=".admin.OrganizationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.OrganizationActivity" />
        </activity>
        <activity
            android:name=".admin.CreateShiftActivity"
            android:label="@string/create_shift_label"
            android:parentActivityName=".admin.ShiftActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.ShiftActivity" />
        </activity>
        <activity
            android:name=".admin.EditShiftActivity"
            android:label="@string/edit_shift_label"
            android:parentActivityName=".admin.ShiftActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.ShiftActivity" />
        </activity>
        <activity
            android:name=".camera.CameraActivity"
            android:label="@string/capture_photo_label"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>